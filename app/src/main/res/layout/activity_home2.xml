<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="horizontal"
    tools:context=".Home">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/repair" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonHome"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="470dp"
                android:drawableTop="@drawable/ic_home_black_24dp"
                android:text="home" />

            <Button
                android:id="@+id/buttonOrder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="470dp"
                android:drawableTop="@drawable/ic_order"
                android:text="Order" />

            <Button
                android:id="@+id/buttonPayment"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="470dp"
                android:drawableTop="@drawable/ic_account_balance_wallet_black_24dp"
                android:text="Payment" />

            <Button
                android:id="@+id/buttonAccount"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="470dp"
                android:drawableTop="@drawable/ic_account_circle_black_24dp"
                android:text="Account" />

        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>